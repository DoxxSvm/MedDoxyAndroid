<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screens.ProfileFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logo"
        android:layout_marginTop="20dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        app:cardCornerRadius="40dp"
        app:strokeColor="#36454F"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/userhh" />
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:id="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aditya Kamath"
        android:textSize="25sp"
        android:fontFamily="@font/lato_regular"
        android:textColor="#36454F"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test@gmail.com"
        android:textSize="20sp"
        android:fontFamily="@font/lato_regular"
        android:textColor="#808080"
        android:layout_marginTop="5dp"

        />
    <View
        android:layout_marginTop="20dp"
        android:id="@+id/view1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:background="@color/dark_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:id="@+id/upcoming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:layout_margin="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming Appointments"
        android:textSize="20sp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"

        />
    <View
        android:id="@+id/view2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/upcoming"
        android:background="@color/dark_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/past"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:layout_margin="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Past Appointments"
        android:textSize="20sp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:drawableRightCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
    <View
        android:id="@+id/view3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/past"
        android:background="@color/dark_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view3"
        android:layout_margin="23dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="20sp"
        android:fontFamily="@font/lato_regular"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:drawableRightCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />
    <View
        android:id="@+id/view4"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/logout"
        android:background="@color/dark_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>