<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/root"
    android:background="@drawable/rounded_corners_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@id/view"
        app:strokeColor="@color/dark_1"
        app:strokeWidth="1dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        app:srcCompat="@drawable/doc" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/lato_bold"
        android:gravity="center"
        android:maxLines="2"
        android:text="Dr Shivam Gupta"
        app:layout_constraintTop_toTopOf="@id/img"
        app:layout_constraintBottom_toBottomOf="@id/img"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/img"
        android:textColor="@color/dark"
        android:textSize="17dp"
        />
    <View
        android:id="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/img"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:background="@color/dark_1"/>
    <ImageView
        android:id="@+id/star"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:maxLines="2"
        android:text="4.5"
        app:layout_constraintTop_toBottomOf="@id/view"

        android:layout_margin="10dp"
        app:layout_constraintStart_toEndOf="@id/star"
        android:textColor="@color/dark"
        android:textSize="17dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:maxLines="2"
        android:id="@+id/consultations"
        android:text="3452 consultations"
        app:layout_constraintTop_toBottomOf="@id/view"


        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/dark"
        android:textSize="17dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/lato_regular"
        android:gravity="center"
        android:maxLines="2"
        android:id="@+id/exp"
        android:text="8 years of experience"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/rating"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/dark"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>